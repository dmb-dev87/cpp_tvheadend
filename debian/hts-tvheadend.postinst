#! /bin/sh -e

HTS_USER=hts

. /usr/share/debconf/confmodule
db_version 2.0

case "$1" in
configure)

   if ! getent passwd $HTS_USER >/dev/null; then
        echo "Creating user: $HTS_USER..."
        adduser --quiet --system --group --shell /bin/bash $HTS_USER
   fi
   ;;
*)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 0
    ;;
esac

db_stop

#DEBHELPER#

exit 0
